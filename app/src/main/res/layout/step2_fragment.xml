<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/txt_song_name3"
        android:layout_width="130dp"
        android:layout_height="32dp"
        android:layout_below="@+id/txt_song_name"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="141dp"
        android:text="Lyrics"
        android:textAlignment="center"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edit_text_name_song2"
        android:layout_width="238dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="28dp"
        android:layout_toEndOf="@+id/txt_song_name"
        android:ems="10"
        android:hint="required"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_submit_image_URL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="53dp"
        android:text="Choose Image" />

    <ImageView
        android:id="@+id/img_view_upload_sucess"
        android:layout_width="202dp"
        android:layout_height="126dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/btn_submit_image_URL"
        android:layout_toRightOf="@+id/btn_submit_image_URL"
        android:src="@drawable/ic_music_home" />

    <TextView
        android:id="@+id/txt_song_name"
        android:layout_width="130dp"
        android:layout_height="32dp"
        android:layout_below="@+id/btn_submit_image_URL"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        android:text="Name of song"
        android:textAlignment="center"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/txt_name_singer"
        android:layout_width="130dp"
        android:layout_height="32dp"
        android:layout_below="@+id/btn_submit_image_URL"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="177dp"
        android:text="Name of song"
        android:textAlignment="center"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edit_text_name_singer_upload"
        android:layout_width="238dp"
        android:layout_height="34dp"
        android:layout_below="@+id/edit_text_name_song2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="23dp"
        android:ems="10"
        android:hint="required"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/edit_text_lyrics_upload"
        android:layout_width="245dp"
        android:layout_height="269dp"
        android:layout_below="@+id/edit_text_name_singer_upload"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="9dp"
        android:layout_toEndOf="@+id/txt_song_name3"
        android:ems="10"
        android:hint="optional"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_next_stepp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="112dp"
        android:text="Next" />

</RelativeLayout>