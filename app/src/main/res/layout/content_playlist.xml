<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_background_playlist_content"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:scaleType="fitXY" />

    <View
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_margin="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/customer_background_banner" />

    <ImageView
        android:id="@+id/img_view_playlist"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/image_background_playlist_content"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp"
        android:scaleType="fitXY" />

    <TextView
        android:textSize="13sp"
        android:text="Những bài hit cũ"
        android:id="@+id/txt_view_name_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_view_playlist"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@+id/img_view_playlist"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#ffff"
        android:textStyle="bold" />
</RelativeLayout>